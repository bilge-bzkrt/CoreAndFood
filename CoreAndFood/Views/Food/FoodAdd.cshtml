@model CoreAndFood.Data.Models.UrunEkle
@{
    ViewData["Title"] = "FoodAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Food Add Page</h2>
<br />

<form class="form-group" action="FoodAdd" asp-controller="Food" method="post" enctype="multipart/form-data">
    @Html.Label("Food Name")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Choose Image")
    <input type="file", name="ImageURL"/>
    <br />
    @Html.Label("Category Adı")
    @Html.DropDownListFor(x=>x.CategoryID, (List<SelectListItem>)ViewBag.dgr, new { @class="form-control"})
    <br />
    <button class="btn btn-info">Save</button>
</form>